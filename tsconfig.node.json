{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    "target": "ES2022",
    "lib": ["ES2022", "DOM"],

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "noEmit": true
  },
  "include": [
    "vite.config.ts",
    "api/**/*.ts",
    "api/**/*.tsx"
  ]
}
